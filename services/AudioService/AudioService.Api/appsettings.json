{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=AudioServiceDb;Username=postgres;Password=postgres"
  },

  "JwtSettings": {
    "SecretKey": "your-super-secret-key-min-32-characters-long-for-production-use",
    "Issuer": "AuthService",
    "Audience": "GroupChatApp",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },

  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },

  "CookieSettings": {
    "HttpOnly": true,
    "Secure": false,  // true для HTTPS
    "SameSite": "Lax",  // Lax, Strict, None
    "AccessTokenCookieName": "access_token",
    "RefreshTokenCookieName": "refresh_token"
  },

  "JanusGateway": {
    "BaseUrl": "http://localhost:8088/janus",
    "ApiSecret": "janusoverlord"
  }
}