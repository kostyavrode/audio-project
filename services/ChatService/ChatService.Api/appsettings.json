{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "ChatService.Infrastructure.Messaging": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=ChatServiceDb;Username=postgres;Password=postgres"
  },

  "JwtSettings": {
    "SecretKey": "your-super-secret-key-min-32-characters-long-for-production-use-change-this",
    "Issuer": "AuthService",
    "Audience": "GroupChatApp",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },

  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },

  "OutboxPublisher": {
    "PollingIntervalSeconds": 5,
    "BatchSize": 100,
    "MaxRetryCount": 5,
    "ExchangeName": "chat-events"
  },

  "CookieSettings": {
    "HttpOnly": true,
    "Secure": false,  // true для HTTPS
    "SameSite": "Lax",  // Lax, Strict, None
    "AccessTokenCookieName": "access_token",
    "RefreshTokenCookieName": "refresh_token"
  }
}