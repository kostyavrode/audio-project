{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "ChatService.Infrastructure.Messaging": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=10010;Database=ChatServiceDb_test;Username=postgres;Password=postgres"
  },

  "JwtSettings": {
    "SecretKey": "test-super-secret-key-min-32-characters-long-for-testing-only",
    "Issuer": "AuthService",
    "Audience": "GroupChatApp",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },

  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 10011,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/test"
  },

  "OutboxPublisher": {
    "PollingIntervalSeconds": 5,
    "BatchSize": 100,
    "MaxRetryCount": 5,
    "ExchangeName": "chat-events-test"
  },

  "CookieSettings": {
    "HttpOnly": true,
    "Secure": false,
    "SameSite": "Lax",
    "AccessTokenCookieName": "access_token",
    "RefreshTokenCookieName": "refresh_token"
  }
}
